{
    "src_folders": ["tests/nightwatch/tests"],
    "output_folder": "tests/nightwatch/reports",
    "custom_commands_path": "tests/nightwatch/commands",

    "selenium": {
        "start_process": false,
        "host" : "ondemand.saucelabs.com",
        "port" : 80
    },

    "test_workers": {
        "enabled": true,
        "workers" : "auto"
    },

    "test_settings": {
        "default": {
            "launch_url": "http://localhost:8000",
            "selenium_host": "ondemand.saucelabs.com",
            "selenium_port": 80,
            "username": "${SAUCE_USERNAME}",
            "access_key": "${SAUCE_ACCESS_KEY}",
            "desiredCapabilities": {
                "acceptSslCerts": true,
                "javascriptEnabled": true,
                "tunnel-identifier": "${TRAVIS_JOB_NUMBER}"
            },
            "screenshots": {
                "enabled": false
            }
        },
        "chrome": {
            "desiredCapabilities": {
                "browserName": "chrome"
            }
        },
        "firefox": {
            "desiredCapabilities": {
                "browserName": "firefox"
            }
        },
        "safari": {
            "desiredCapabilities": {
                "browserName": "safari"
            }
        },
        "phone": {
            "desiredCapabilities": {
                "platformName" : "iOS",
                "platformVersion": "10.3",
                "browserName": "Safari",
                "deviceName": "iPhone Simulator",
                "deviceType": "phone"
            }
        },
        "tablet": {
            "desiredCapabilities": {
                "platformName" : "iOS",
                "platformVersion": "10.3",
                "browserName": "Safari",
                "deviceName": "iPad Simulator",
                "deviceType": "tablet"
            }
        }
    }
}
