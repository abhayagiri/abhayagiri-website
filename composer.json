{
    "name": "www.abhayagiri.org",
    "description": "Abhayagiri Web Site",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.2.*",
        "deployer/deployer": "4.x-dev",
        "mibe/feedwriter": "^1.0",
        "league/oauth2-google": "^1.0",
        "ezyang/htmlpurifier": "^4.8",
        "nesbot/carbon": "^1.21",
        "anhskohbo/no-captcha": "^2.1"
    },
    "require-dev": {
        "codeception/codeception": "^2.2",
        "fzaninotto/faker": "~1.4",
        "jakoch/phantomjs-installer": "2.1.1-p06",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "@stable",
        "simplepie/simplepie": "^1.4",
        "symfony/css-selector": "2.8.*|3.0.*",
        "symfony/dom-crawler": "2.8.*|3.0.*",
        "site5/phantoman": "^1.1",
        "neronmoon/scriptsdev": "^0.1.0",
        "codeception/mockery-module": "^0.2.2"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/",
            "Abhayagiri\\": "src/"
        },
        "files": [
            "src/_functions.php"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "scripts-dev": {
        "post-install-cmd": [
            "PhantomInstaller\\Installer::installPhantomJS"
        ],
        "post-update-cmd": [
            "PhantomInstaller\\Installer::installPhantomJS"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
